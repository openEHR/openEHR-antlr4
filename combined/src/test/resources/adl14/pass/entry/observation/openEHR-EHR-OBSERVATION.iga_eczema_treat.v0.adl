		["en"] = <
			items = <
				["at0000"] = <
					text = <"IGA eczema (TREAT)">
					description = <"Investigator global assessment (PGA) to describe the severity of their eczema for the treatment of severe atopic eczema trial (TREAT).">
				>
				["at0001"] = <
					text = <"Event Series">
					description = <"@ internal @">
				>
				["at0002"] = <
