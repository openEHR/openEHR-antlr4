import org.openEHR.base ;


abstract class ISM_TRANSITION
    is_a PATHABLE

feature_group ("access")

    |
    | Current (post-transition) state, i.e. resulting from the Action.
    |
    prop current_state : INSTRUCTION_EXECUTION_STATE ;

    |
    | Transition that occurred.
    |
	prop transition : INSTRUCTION_EXECUTION_TRANSITION ;

    |
    | Coded careflow step, if applicable.
    |
    prop careflow_step :? DV_CODED_TEXT ;

    |
    | Optional reason(s).
    |
	prop reason :? list <DV_TEXT> ;

end

