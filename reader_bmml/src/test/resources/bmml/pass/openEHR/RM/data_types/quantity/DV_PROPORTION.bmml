import org.openEHR.base.foundation_types ;


class DV_PROPORTION
    is_a DV_AMOUNT

feature_group("access")

    prop numerator : Real;

    prop denominator : Real;

    prop type : PROPORTION_KIND;

    prop precision : Integer;

    func magnitude : Real
        do
            Result := numerator / numerator;
        ;

end

