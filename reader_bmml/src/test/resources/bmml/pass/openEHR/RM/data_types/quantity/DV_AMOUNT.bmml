import org.openEHR.base.foundation_types ;


class DV_AMOUNT
    is_a DV_QUANTIFIED

feature_group("access")

    prop value : V;

    prop reference_ranges :? list<Reference_range<V>>;

feature_group("runtime")

    |
    | Accuracy of the measurement, expressed as a half-range, either with
    | measurement units, or with '%' pseudo-units
    | Example: 0.1V means ±0.1V; 3% means ±3%
    |
    prop accuracy :? Real;

    prop accuracy_is_percent :? Boolean;

end
